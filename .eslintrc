ecmaFeatures:
  ecmascript: 6

env:
  browser: true
  node: true

globals:
  jQuery: true
  $: true
  Backbone: true
  _: true

rules:
  # Possible errors
  no-cond-assign: 0
  no-comma-dangle: 2
  no-console: 1
  no-irregular-whitespace: 2
  no-reserved-keys: 2

  # Best practices
  block-scoped-var: 2
  eqeqeq: [2, smart]
  no-floating-decimal: 2
  wrap-iife: [2, inside]
  curly: 2
  no-alert: 2
  no-eval: 2
  no-extend-native: 2
  no-with: 2

  # Variables
  no-use-before-define: 2
  no-shadow-restricted-names: 2

  # Strict Mode
  strict: [2, "global"]

  # Node.js
  no-mixed-requires: 2


  # Stylistic issues
  camelcase: 0
  new-cap: 0
  no-mixed-spaces-and-tabs: 2
  no-space-before-semi: 2
  no-underscore-dangle: 0
  space-after-keywords: 2
  no-trailing-spaces: 2
  space-in-brackets: [2, never]
  quotes: [2, single]
  semi: [2, "always"]

  # Outstanding issues
  no-unused-vars: 0
  no-extend-native: 0
  valid-typeof: 0
  brace-style: 0
  no-multi-spaces: 0
  space-infix-ops: 0
  no-return-assign: 0
  comma-spacing: 0
  eol-last: 0
  key-spacing: 0
  no-extra-parens: 0
  space-unary-ops: 0
  no-unused-expressions: 0
  no-sequences: 0
  dot-notation: 0
  consistent-return: 0
  no-redeclare: 0
  no-lonely-if: 0
